<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edwinacubillos.misdeudores">

    <application
        android:name=".MisDeudores"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.tabs.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.bottom.BottomActivity"
            android:label="@string/title_activity_bottom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.drawer.DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.registro.RegistroActivity" />
    </application>

</manifest>